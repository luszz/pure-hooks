{
    "root": true,
    "compilerOptions": {
      "target": "ES5",
      "moduleResolution": "node",
      "jsx": "react",
      "esModuleInterop": true,
      "downlevelIteration": true,
      "sourceMap": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"],
        "pureHooks": ["./packages/hooks/src/index.ts"],
        "pure-hooks": ["./packages/hooks/src/index.ts"],
        "pureHooks/lib/*": ["./packages/hooks/src/*"],
        "pure-hooks/lib/*": ["./packages/hooks/src/*"]
      },
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "strictNullChecks": true,
      "importHelpers": true
    },
    "exclude": ["node_modules", "lib", "es", "dist", "example"]
}